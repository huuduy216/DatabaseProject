<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="database.olympicgui.WinnerOfActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="115sp"
        android:id="@+id/listView_goldWinner"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Gold Winner:"
        android:textColor="#c98910"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Silver Winner:"
        android:layout_below="@+id/listView_goldWinner"
        android:layout_alignParentStart="true"
        android:textColor="#A8A8A8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="115sp"
        android:id="@+id/listView_silverWinner"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Bronze Winner:"
        android:layout_below="@+id/listView_silverWinner"
        android:layout_alignParentStart="true"
        android:textColor="#965A38"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="115sp"
        android:id="@+id/listView_bronzeWinner"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />
</RelativeLayout>
